{{#if topMovies.length}}
  <h2>Top Rated Movies</h2>
  <div class="movies-grid">
    {{#each topMovies}}
      <div class="movie-card">
        <a href="/movie/{{id}}">
          <img src="{{poster}}" alt="{{title}} poster">
          <div class="movie-info">
            <h3>{{title}}</h3>
            <p>{{year}}</p>
            <p>Rating: {{avgRating}}/5</p>
          </div>
        </a>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if reviews.length}}
  <h2>Latest Reviews</h2>
  <div class="reviews-section">
    {{#each reviews}}
      <div class="review-item">
        <div class="review-header">
          <div>
            <a href="/movie/{{movieId}}">
              <strong>{{title}}</strong>
            </a>
            by <span class="review-author">{{userid}}</span>
          </div>
          <span class="review-date">{{date}}</span>
        </div>
        <p class="review-text">{{review}}</p>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="cta-section">
  <h2>Ready to start your movie journey?</h2>
  <p>Join our community today to rate, review, and discover amazing films!</p>
  {{#if user}}
    <a href="/search" class="btn">Explore Movies</a>
  {{else}}
    <div class="cta-buttons">
      <a href="/register" class="btn">Sign Up</a>
      <a href="/login" class="btn btn-alt">Login</a>
    </div>
  {{/if}}
</div>
